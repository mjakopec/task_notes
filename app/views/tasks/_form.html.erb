<%= form_for(@task, :remote=>true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :value => session[:email] %>
  </div>
  <div class="field">
    <%= f.label :todo %><br />
    <%= f.text_area :todo %>
  </div>
  <div class="field">
    <%= f.label :priority %><br />
    <%= f.select :priority, options_for_select([["niski", "niski"], ["normalni", "normalni"], ["visoki", "visoki"],],:priority) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>